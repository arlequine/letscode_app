    <%= f.text_field :genre %>
  </div>

  <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :birthday_year %><br>
    <%= f.text_field :birthday_year %>
  </div>

  <div class="field">
    <%= f.label :organization %><br>
    <%= f.text_field :organization %>
  </div>

  <div class="field">
    <%= f.label :opinion %><br>
    <%= f.text_field :opinion %>
  </div>

  <div class="hide">
    <%= f.label :user_type %><br>
