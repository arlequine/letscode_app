<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Welcome <%= current_user.name %></h1>
</div>
<% if current_user.user_type == "empresa" %>
  <p class="newproject"><%= link_to 'New Project', new_project_path, class: "btn btn-success"  %></p>
<% end %>
<% if current_user.user_type == "empresa" %>
<h3 class="h3">YOUR PROJECTS</h3>
<% else %>
<h3 class="h3">ALL PROJECTS:</h3>
<% end %>
<div class="media">
  <div class="media-body">
	<% if current_user.user_type == "practicante" %>
		
	    <table class="table table-hover">
			<thead>
				<tr>
					<th>Project Title</th>
					<th>Project Status</th>
					<th>Collaboration Space</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
        <% all_projects.each do |project| %>
          <% @find = false %>
				  <% current_user.postulations.each do |postulation|  %>
					  <tr>
					  <% if postulation.proyecto_id == project.id %>
					      <% project = current_project(postulation.proyecto_id) %>
					      <% @find = true %>
					      <!-- working -->
						  <td><%= link_to project.title, description_project_path(project) %></td>
						  <!-- worked -->
						  <% if project.status_of_project(project) == "aceptado" %>
						    <td><span class="label label-success">Accepted</span></td>
						    <td><%= link_to 'Collaborate', show_collaboration_space_path(project), class: 'btn btn-success btn-sm' %></td>
						  <% end %>
						  <% if project.status_of_project(project) == "postulado" %>
						    <td><span class="label label-warning">Processing</span></td>
						    <td><button type="button" class="btn btn-warning btn-sm" disabled="true"><%= "Applied" %></button></td>
						  <% end %>
					  <% end %>
					  </tr>  
					<% end %>
					<% if @find == false %>
						<td><%= link_to project.title, description_project_path(project) %></td>
						<td><span class="label label-danger">Available</span></td>
						<td><%= link_to ' Join ', request_path(project),class: "btn btn-danger btn-sm" %></td>	
					<% end %>
				<% end %>		
			</tbody>
		</table>
		
	<% else %>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>Project Title</th>
					<th>Project Description</th>
					<th>Incentive</th>
					<th>Project Result</th>
					<th>Students Accepted</th>
					<th>Project Deadline</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>

				<% current_user.proyectos.each do |proyecto| %>
				  <tr id="<%= "delete_proyecto_#{proyecto.id}" %>">
				  	<td><%= link_to proyecto.title, show_collaboration_space_path(proyecto) %></td>
				  	<td><%= proyecto.description %></td>
				  	<td><%= proyecto.incentive %></td>
				  	<td><%= proyecto.result %></td>
				  	<td><%= proyecto.num_students %></td>
				  	<td><%= proyecto.dead_line %></td>
				  	<td><%= link_to 'Learners by Project', show_participantes_proyecto_path(proyecto), class: 'btn  btn-primary btn-sm' %></td>
				  	<td><%= link_to 'Edit', edit_proyecto_path(proyecto), class: 'btn btn-success btn-sm' %></td>
				  	<td><%= link_to 'Destroy', proyecto, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' }, :remote => true %></td>
				  </tr>
				<% end %>
			</tbody>
		</table>
	<% end %>
  </div>
</div>




