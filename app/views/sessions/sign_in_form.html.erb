<% provide(:title, "Log in") %>

<div class="row">
  <div class="col.med-6 col-md-offset-4">
    
 
    <%= form_for(:session, url: signin_path) do |f| %>
       
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
        
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        
       <br>
        <%= f.submit 'Log in', class: 'btn btn-primary btn-block'%>
       
    <% end %>

    <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div> 