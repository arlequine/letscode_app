<p id="notice"><%= notice %></p>

<h1>Listing Skills</h1>

<table>
	<thead>
		<tr>
			<th>Skill Name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @skills.each do |skill| %>
		  <tr id="<%= "delete_skill_#{skill.id}" %>">
		  	<td><%= skill.name %></td>
		  	<td><%= link_to 'Show', skill %></td>
		  	<td><%= link_to 'Edit', edit_skill_path(skill) %></td>
		  	<td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
		  </tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Skill', new_skill_path %>